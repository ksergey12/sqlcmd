<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="ua.com.juja.ksergey.sqlcmd.service"/>

    <bean id="databaseManagerFactory" class="net.sqlcmd.service.DatabaseManagerFactoryImpl">
        <property name="className" value="net.sqlcmd.dao.JDBCDatabaseManager"/>
    </bean>

</beans>